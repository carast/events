%h2=t('.create_account')
%p=t('.create_message')

- if @identity.errors.any?
  .alert.alert-error
    %strong=t(:invalid_form)
    %span=t(:correct_errors)

= form_for @identity, url: identity_path, html: { class: 'form-horizontal' }  do |form|
  .control-group
    = form.label :email, class: 'control-label'
    .controls
      = form.text_field :email, class: 'input-large'
      %span.help-inline=@identity.errors[:email] if @identity.errors[:email].any?

  .control-group
    = form.label :password, class: 'control-label'
    .controls
      = form.password_field :password, class: 'input-large'
      %span.help-inline=@identity.errors[:password] if @identity.errors[:password].any?

  .control-group
    = form.label :password_confirmation, class: 'control-label'
    .controls
      = form.password_field :password_confirmation, class: 'input-large'
      %span.help-inline=@identity.errors[:password_confirmation] if @identity.errors[:password_confirmation].any?

  .form-actions
    = form.submit t('.create'), class: 'btn btn-primary'
    = link_to t('.cancel'), root_path, class: 'btn'
