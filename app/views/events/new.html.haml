%h2=t('.create_event')
%p=t('.create_message')

= form_errors(@event)

= form_for @event, html: { class: 'form-horizontal'} do |form|
  .control-group{class: has_errors(@event, :name)}
    = form.label :name, class: 'control-label'
    .controls
      = form.text_field :name, class: 'input-large'
      = field_errors(@event, :name)

  .control-group{class: has_errors(@event, :description)}
    = form.label :description, class: 'control-label'
    .controls
      = form.text_area :description, class: 'input-large'
      = field_errors(@event, :description)

  .control-group.date{class: has_errors(@event, :start_date)}
    = form.label :start_date, class: 'control-label'
    .controls
      = form.datetime_select :start_date, class: 'input-large'
      = field_errors(@event, :start_date)

  .control-group.date{class: has_errors(@event, :end_date)}
    = form.label :end_date, class: 'control-label'
    .controls
      = form.datetime_select :end_date, class: 'input-large'
      = field_errors(@event, :end_date)

  .control-group{class: has_errors(@event, :location)}
    = form.label :location, class: 'control-label'
    .controls
      = form.text_area :location, class: 'input-large'
      = field_errors(@event, :location)

  .control-group
    = form.label :organizer, class: 'control-label'
    .controls
      = form.text_field :organizer, class: 'input-large'

  .form-actions
    = form.submit t('.create'), class: 'btn btn-primary'
    = link_to t('.cancel'), root_path, class: 'btn'
